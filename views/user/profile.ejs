<% if(userInSession) { %>
    <div class="profileGreeting">
    <h2>Welcome <%= userInSession.username %>! </h2>
    <p>Here are all your Recipes!</p>
    <form action="/user/recipe/search" method="post" autocomplete="off">
        <input type="text" name="query" placeholder="Search...">
        <button class="btn" type="submit">Search</button>
    </form>
    <a href="/user/profile">Clear!</a>
</div>
    <br>

    <% if (!isQuery) { %>
        <% allRecipes.forEach(recipe=> { %>
            <div class="container">
                <img src="<%= recipe.image %>" alt="<%= recipe.title %>" style="width: 300px;">
                <a href="/user/recipe/<%= recipe._id %>">
                    <h3>
                        <%= recipe.title %>
                    </h3>
                </a>
            </div>
            <% }) %>

                <% } else { %>
                    <% queryRecipe.forEach(recipe=> { %>
                        <div class="container">
                            <img src="<%= recipe.image %>" alt="<%= recipe.title %>" style="width: 300px;">
                            <a href="/user/recipe/<%= recipe._id %>">
                                <h3>
                                    <%= recipe.title %>
                                </h3>
                            </a>
                        </div>
                        <% }) %>
                            <% } %>

                                <% } else { %>
                                    <br>
                                    <p>Still no logged in user, sorry!</p>
                                    <% } %>

                                        <a class="logoutBtn" href="/user/recipe/create">Create Recipe!</a>