<h1>CREATE Recipe</h1>

<form action="/user/recipe/create" method="post" autocomplete="off" enctype="multipart/form-data">
        <label for="title">Title : <input type="text" name="title" id="title"></label>
        <br>
        <label for="image">Image : <input type="file" name="image" id="image"></label>
        <br>
        <label for="cookingTime">Cooking Time : <input type="number" name="cookingTime" id="cookingTime"
                        min="1"></label>
        <br>
        <label for="countryOfOrigin">Country Of Origin : <input type="text" name="countryOfOrigin"
                        id="countryOfOrigin"></label>
        <br>
        <label for="continent">Continent : <select name="continent" id="continent">
                        <% ["Asia","Africa", "Australia" ,"Europe","North America","South America"].forEach(element=> {
                                %>
                                <option value="<%- element %>"><%- element %></option>
                                <% }) %>
                </select>
        </label>
        <br>
        <label for="level">Level : <select name="level" id="level">
                        <% ["Novice", "Intermediate" , "Advanced" , "Expert" ].forEach(element=> { %>
                                <option value="<%- element %>"><%- element %></option>
                                <% }) %>
                </select>
        </label>
        <br>
        <label for="mealType">Meal Type : <select name="mealType" id="mealType">
                        <% ["Breakfast", "Lunch" , "Dinner" , "Snack" , "Dessert" ].forEach(element=> { %>
                                <option value="<%- element %>"><%- element %></option>
                                <% }) %>
                </select>
        </label>
        <br>
        <label for="serves">Serves : <input type="number" name="serves" id="serves"></label>

        <br>
        <label for="ingredients">Ingredients : <textarea name="ingredients" cols="30" rows="10"
                        placeholder="Please separate the different ingredients by using a comma(,) eg. Â½ cup unsalted butter, 1 cup all-purpose flour, 2 cups sugar, etc... "></textarea></label>
        <br>
        <label for="directions">Directions :
                <textarea name="directions" cols="100" rows="10" placeholder="Please seperate the different directions by using the word Step followed my the number order of the direction, eg. 
        Step 1. Melt butter in a 13- x 9-inch baking dish, 
        Step 2. Combine flour, 1 cup sugar, baking powder, and salt; add milk, stirring just until dry ingredients are moistened. Pour batter over butter (do not stir), 
        Step 3. ..., etc."></textarea></label>
        <br>
        <label for="recipeType">Recipe Type : <select name="recipeType">
                        <% ["Meat", "Fish" , "Vegetarian" , "Vegan" ].forEach(element=> { %>
                                <option value="<%- element %>"><%- element %></option>
                                <% }) %>
                </select>
        </label>
        <br>
        <button type="submit">Create Recipe</button>

</form>